        android:orientation="vertical">

        <ImageView
            style="@style/picture"
            android:src="@drawable/vno" />
    </LinearLayout>

    <LinearLayout
        style="@style/wrap">
        <ImageView
            style="@style/icon"
            android:src="@drawable/ic_phone_black_18dp"/>
        <ImageView
            style="@style/icon"
            android:src="@drawable/ic_email_black_18dp"/>
        <ImageView
            style="@style/icon"
            android:src="@drawable/ic_share_black_18dp"/>
        <ImageView
            style="@style/icon"
            android:src="@drawable/ic_place_black_18dp"/>
    </LinearLayout>
    <LinearLayout
        style="@style/wrap">
        <TextView
            style="@style/text"
            android:text="Phone"/>
        <TextView
            style="@style/text"
            android:text="Email"/>
        <TextView
            style="@style/text"
            android:text="Share"/>
        <TextView
            style="@style/text"
            android:text="Location"/>
    </LinearLayout>
    <View
        style="@style/line"
        android:background="#000000"></View>
    <LinearLayout
        style= "@style/wrap"
        android:orientation="vertical"
        android:background="#ECEFF1">
        <TextView
            style="@style/info"
            android:text="Open: 24/7"/>
        <View
